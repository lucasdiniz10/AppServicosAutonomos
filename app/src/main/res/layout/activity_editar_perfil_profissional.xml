<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.EditarPerfilProfissional">

    <ImageView
        android:id="@+id/imageViewFotoProfissional"
        android:layout_width="112dp"
        android:layout_height="116dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/userpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPerfil"
        android:layout_width="330dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold"
        android:text="Cadastro Profissional"
        android:textAlignment="center"
        android:textColor="#3A6A75"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFotoProfissional"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPerfil"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="551dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/textViewNome"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="textPersonName|textCapWords"
                android:text="Nome"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewTelefone"
                app:layout_constraintEnd_toEndOf="@+id/textViewTelefone"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/textViewTelefone"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTelefone"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="text"
                android:text="Telefone com DDD"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewCpf"
                app:layout_constraintEnd_toEndOf="@+id/textViewCpf"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/textViewCpf"
                app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

            <TextView
                android:id="@+id/textViewCpf"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="text"
                android:text="Cpf"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDataNascimento"
                app:layout_constraintEnd_toEndOf="@+id/textViewDataNascimento"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/textViewDataNascimento"
                app:layout_constraintTop_toBottomOf="@+id/textViewTelefone" />

            <TextView
                android:id="@+id/textViewDataNascimento"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="text"
                android:text="Data de Nascimento"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewEndereco"
                app:layout_constraintEnd_toEndOf="@+id/textViewEndereco"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="@+id/textViewEndereco"
                app:layout_constraintTop_toBottomOf="@+id/textViewCpf" />

            <TextView
                android:id="@+id/textViewEndereco"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="text"
                android:text="Endereço"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewEmail"
                app:layout_constraintEnd_toEndOf="@+id/textViewEmail"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="@+id/textViewEmail"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataNascimento" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="textEmailAddress"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDescricao"
                app:layout_constraintEnd_toEndOf="@+id/textViewDescricao"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewDescricao"
                app:layout_constraintTop_toBottomOf="@+id/textViewEndereco" />


            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:inputType="text|textCapSentences"
                android:text="Descrição (Experiências Profissionais.)"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewFormasDePagamento"
                app:layout_constraintEnd_toEndOf="@+id/textViewFormasDePagamento"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/textViewFormasDePagamento"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

            <TextView
                android:id="@+id/textViewFormasDePagamento"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/bold"
                android:maxLines="10"
                android:text="Formas de Pagamento:"
                android:textAlignment="center"
                android:textColor="#3A6A75"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewPagamentoDinheiro"
                app:layout_constraintEnd_toEndOf="@+id/textViewPagamentoDinheiro"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/textViewPagamentoDinheiro"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescricao" />

            <TextView
                android:id="@+id/textViewPagamentoDinheiro"
                android:layout_width="292dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bold"
                android:text="Dinheiro"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewPagamentoDebito"
                app:layout_constraintEnd_toEndOf="@+id/textViewPagamentoDebito"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/textViewPagamentoDebito"
                app:layout_constraintTop_toBottomOf="@+id/textViewFormasDePagamento" />

            <TextView
                android:id="@+id/textViewPagamentoDebito"
                android:layout_width="292dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bold"
                android:text="Cartão de Débito"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewPagamentoCredito"
                app:layout_constraintEnd_toEndOf="@+id/textViewPagamentoCredito"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/textViewPagamentoCredito"
                app:layout_constraintTop_toBottomOf="@+id/textViewPagamentoDinheiro" />

            <TextView
                android:id="@+id/textViewPagamentoCredito"
                android:layout_width="292dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bold"
                android:text="Cartão de Crédito"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonEditarPerfil"
                app:layout_constraintEnd_toEndOf="@id/buttonEditarPerfil"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@id/buttonEditarPerfil"
                app:layout_constraintTop_toBottomOf="@+id/textViewPagamentoDebito" />

            <Button
                android:id="@+id/buttonEditarPerfil"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/selector_button"
                android:baselineAligned="false"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Editar Perfil"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/buttonDeletarPerfil"
                app:layout_constraintEnd_toEndOf="@id/buttonDeletarPerfil"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@id/buttonDeletarPerfil"
                app:layout_constraintTop_toBottomOf="@+id/textViewPagamentoCredito" />

            <Button
                android:id="@+id/buttonDeletarPerfil"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/selector_button"
                android:baselineAligned="false"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Deletar Perfil"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonEditarPerfil" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>