<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.EscolherSubCategoriaAutomoveis">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewSubCategoriaAutomoveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bold"
                android:text="Automóveis"
                android:textAlignment="center"
                android:textColor="#3A6A75"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewSubTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/bold"
                android:paddingHorizontal="50dp"
                android:text="Escolha a sub-categoria dos serviços que você realiza."
                android:textAlignment="center"
                android:textColor="#73B650"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewSubTitulo2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSubCategoriaAutomoveis" />

            <TextView
                android:id="@+id/textViewSubTitulo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/regular"
                android:paddingHorizontal="45dp"
                android:text="Após o cadastro, você poderá alterar as suas  sub-categorias"
                android:textAlignment="center"
                android:textColor="#73B650"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/imageViewBaseSubCategoria"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSubTituloCategoria" />

            <ImageView
                android:id="@+id/imageViewBaseSubCategoria"
                android:layout_width="408dp"
                android:layout_height="178dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageViewBaseSubCategoria2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/categoria" />

            <TextView
                android:id="@+id/textViewFunilariaePintura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Funilaria e Pintura"
                android:textColor="#4C4C4C"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/textViewDescricaoFunilariaePintura"
                android:layout_width="314dp"
                android:layout_height="32dp"
                android:fontFamily="@font/regular"
                android:text="Funilaria Automotiva, Higienização e Polimento, Martelinho de Ouro, Pintura."
                android:textColor="#4C4C4C"
                android:textSize="12dp"
                android:paddingLeft="20dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintVertical_bias="0.36" />

            <Button
                android:id="@+id/buttonEscolherSubCategoriaFunilariaePintura"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_categoria"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Escolher Grupo"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria"
                app:layout_constraintVertical_bias="0.7" />

            <ImageView
                android:id="@+id/imageViewBaseSubCategoria2"
                android:layout_width="408dp"
                android:layout_height="178dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewBaseSubCategoria"
                app:srcCompat="@drawable/categoria" />

            <TextView
                android:id="@+id/textViewVidracariaAutomotiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Vidraçaria Automotiva"
                android:textColor="#4C4C4C"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintStart_toStartOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/textViewDescricaoVidracariaAutomotiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Insufilm, Vidraçaria em Geral."
                android:textColor="#4C4C4C"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria2"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintVertical_bias="0.36" />

            <Button
                android:id="@+id/buttonEscolherSubCategoriaVidracariaAutomotiva"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_categoria"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Escolher Grupo"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria2"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria2"
                app:layout_constraintVertical_bias="0.7" />

            <ImageView
                android:id="@+id/imageViewBaseSubCategoria3"
                android:layout_width="408dp"
                android:layout_height="178dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewBaseSubCategoria2"
                app:srcCompat="@drawable/categoria" />

            <TextView
                android:id="@+id/textViewMecanica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Mecânica"
                android:textColor="#4C4C4C"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria3"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintVertical_bias="0.19999999" />

            <TextView
                android:id="@+id/textViewDescricaoMecanica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity=""
                android:text="Borracharia, Guincho, Mecânica Geral"
                android:textColor="#4C4C4C"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria3"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintVertical_bias="0.36" />

            <Button
                android:id="@+id/buttonEscolherSubCategoriaMecanica"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_categoria"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Escolher Grupo"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintEnd_toEndOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="@+id/imageViewBaseSubCategoria3"
                app:layout_constraintTop_toTopOf="@id/imageViewBaseSubCategoria3"
                app:layout_constraintVertical_bias="0.7" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>