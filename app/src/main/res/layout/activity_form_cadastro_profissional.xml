<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.FormCadastroProfissional">

    <TextView
        android:id="@+id/textViewCadastro"
        android:layout_width="330dp"
        android:layout_height="31dp"
        android:fontFamily="@font/bold"
        android:text="Cadastro Profissional"
        android:textAlignment="center"
        android:textColor="#3A6A75"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastro"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="551dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp">

            <EditText
                android:id="@+id/editTextNome"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTelefone"
                app:layout_constraintEnd_toEndOf="@+id/editTextTelefone"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/editTextTelefone"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextTelefone"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Telefone"
                android:inputType="phone"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextCpf"
                app:layout_constraintEnd_toEndOf="@+id/editTextCpf"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/editTextCpf"
                app:layout_constraintTop_toBottomOf="@+id/editTextNome" />

            <EditText
                android:id="@+id/editTextCpf"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Cpf"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextDataNascimento"
                app:layout_constraintEnd_toEndOf="@+id/editTextDataNascimento"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/editTextDataNascimento"
                app:layout_constraintTop_toBottomOf="@+id/editTextTelefone" />

            <EditText
                android:id="@+id/editTextDataNascimento"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Data de Nascimento"
                android:inputType="date"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
                app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="@+id/editTextEmail"
                app:layout_constraintTop_toBottomOf="@+id/editTextCpf" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextConfirmarEmail"
                app:layout_constraintEnd_toEndOf="@+id/editTextConfirmarEmail"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/editTextConfirmarEmail"
                app:layout_constraintTop_toBottomOf="@+id/editTextDataNascimento" />

            <EditText
                android:id="@+id/editTextConfirmarEmail"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Confirmar Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextDescricao"
                app:layout_constraintEnd_toEndOf="@+id/editTextDescricao"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/editTextDescricao"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <EditText
                android:id="@+id/editTextDescricao"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Descrição (Experiências Profissionais.)"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewFormasDePagamento"
                app:layout_constraintEnd_toEndOf="@+id/textViewFormasDePagamento"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/textViewFormasDePagamento"
                app:layout_constraintTop_toBottomOf="@+id/editTextConfirmarEmail" />

            <TextView
                android:id="@+id/textViewFormasDePagamento"
                android:layout_width="221dp"
                android:layout_height="23dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/regular"
                android:text="Formas de Pagamento Aceitas:"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintEnd_toEndOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintTop_toBottomOf="@+id/editTextDescricao" />

            <CheckBox
                android:id="@+id/checkBoxDinheiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinheiro"
                android:fontFamily="@font/regular"
                app:layout_constraintBottom_toTopOf="@+id/checkBoxCartaoDeDebito"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxCartaoDeDebito"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/checkBoxCartaoDeCredito"
                app:layout_constraintTop_toBottomOf="@+id/textViewFormasDePagamento" />

            <CheckBox
                android:id="@+id/checkBoxCartaoDeDebito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cartão de Débito"
                android:fontFamily="@font/regular"
                app:layout_constraintBottom_toTopOf="@+id/checkBoxCartaoDeCredito"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxCartaoDeCredito"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/checkBoxCartaoDeCredito"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxDinheiro" />

            <CheckBox
                android:id="@+id/checkBoxCartaoDeCredito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/regular"
                android:text="Cartão de Crédito"
                app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintEnd_toEndOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxCartaoDeDebito" />

            <Button
                android:id="@+id/buttonFinalizarCadastro"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="67dp"
                android:layout_marginRight="67dp"
                android:background="@drawable/selector_button"
                android:baselineAligned="false"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Finalizar Cadastro"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFormasDePagamento" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>