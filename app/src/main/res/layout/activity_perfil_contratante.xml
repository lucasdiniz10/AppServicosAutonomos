<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.PerfilContratante">

    <ImageView
        android:id="@+id/imageViewFotoContratante"
        android:layout_width="67dp"
        android:layout_height="68dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toStartOf="@+id/textViewNomeContratante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNomeContratante"
        android:layout_width="222dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/bold"
        android:text="Nome do Contratante"
        android:textAlignment="center"
        android:textColor="#3A6A75"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewFotoContratante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="394dp"
        android:layout_height="531dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeContratante"
        app:layout_constraintVertical_bias="0.783">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="551dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp">


            <TextView
                android:id="@+id/textViewNome"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:fontFamily="@font/regular"
                android:hint="Nome Completo"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewTelefone"
                app:layout_constraintEnd_toEndOf="@+id/editTextTelefone"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@id/textViewTelefone"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTelefone"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:fontFamily="@font/regular"
                android:hint="Telefone"
                android:inputType="phone"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewEndereco"
                app:layout_constraintEnd_toEndOf="@+id/textViewEndereco"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/textViewEndereco"
                app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

            <TextView
                android:id="@+id/textViewEndereco"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/regular"
                android:hint="Endereço"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDataNascimento"
                app:layout_constraintEnd_toEndOf="@+id/textViewDataNascimento"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/textViewDataNascimento"
                app:layout_constraintTop_toBottomOf="@+id/textViewTelefone" />

            <TextView
                android:id="@+id/textViewDataNascimento"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/regular"
                android:hint="Data de Nascimento"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewEmail"
                app:layout_constraintEnd_toEndOf="@+id/textViewEmail"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="@+id/textViewEmail"
                app:layout_constraintTop_toBottomOf="@+id/textViewEndereco" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/regular"
                android:hint="Email"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewServicosOferecidos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataNascimento" />

            <TextView
                android:id="@+id/textViewServicosOferecidos"
                android:layout_width="295dp"
                android:layout_height="47dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/regular"
                android:hint="Serviços Oferecidos"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarCadastro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

            <Button
                android:id="@+id/buttonFinalizarCadastro"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="67dp"
                android:layout_marginRight="67dp"
                android:background="@drawable/selector_button"
                android:baselineAligned="false"
                android:fontFamily="@font/bold"
                android:shadowRadius="12"
                android:text="Daqui vai p onde?"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewServicosOferecidos" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>