<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCadastroContratante">

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="textPersonName"
        android:text="Nome"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/editTextConfirmarEmail"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="textPersonName"
        android:text="Confirmar Email"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <EditText
        android:id="@+id/editTextDataNascimento"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="date"
        android:text="Data de Nascimento"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <EditText
        android:id="@+id/editTextCpf"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="textPersonName"
        android:text="Cpf"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <EditText
        android:id="@+id/editTextTelefone"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="textPersonName"
        android:text="Telefone"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#CECECE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/textViewCadastro"
        android:layout_width="118dp"
        android:layout_height="28dp"
        android:fontFamily="@font/bold"
        android:text="Cadastro"
        android:textAlignment="center"
        android:textColor="#3A6A75"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/buttonFinalizarCadastro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="@font/bold"
        android:shadowRadius="12"
        android:text="Finalizar Cadastro"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

</androidx.constraintlayout.widget.ConstraintLayout>